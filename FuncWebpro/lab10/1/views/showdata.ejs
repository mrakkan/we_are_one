<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>lab10-1</title>
</head>
<style>
    body{
        display: flex;
    justify-content: center;
    align-items: center;
    height: 90vh;
    }
    table, thead, tr, th{
        border: 1px solid black;
    }
</style>
<body>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item)=>{ %>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= item.first_name %></td>
                    <td><%= item.last_name %></td>
                    <td><%= item.username %></td>
                    <td><%= item.email %></td>
                    <td>
                        <form action="/show/<%= item.id %>" method="GET">
                            <input type="submit" value="Detail">
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>

</html>